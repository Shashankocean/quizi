                <Label x:Name="Label_B" Content="" HorizontalAlignment="Left" Margin="67,30,0,17" VerticalAlignment="Center" Width="292" Height="38" FontSize="22" FontWeight="Bold" RenderTransformOrigin="0.503,0.421">
                    <Label.Foreground>
